          "fonetica": "/keɪ/",
          "tem_audio": true,
          "contexto": "Sounds like 'kay'"
        },
        {
          "ingles": "L",
          "portugues": "Letra L - som como 'él'",
          "fonetica": "/ɛl/",
          "tem_audio": true,
          "contexto": "Simple 'el' sound"
        },
        {
          "ingles": "M",
          "portugues": "Letra M - som como 'ém'",
          "fonetica": "/ɛm/",
          "tem_audio": true,
          "contexto": "Simple 'em' sound"
        },
        {
          "ingles": "N",
          "portugues": "Letra N - som como 'én'",
          "fonetica": "/ɛn/",
          "tem_audio": true,
          "contexto": "Simple 'en' sound"
        },
        {
          "ingles": "O",
          "portugues": "Letra O - som como 'ôu'",
          "fonetica": "/oʊ/",
          "tem_audio": true,
          "contexto": "Sounds like 'oh'"
        }
      ]
    },
    {
      "id": "letras_p_t",
      "titulo": "Letters P through T",
      "tipo": "vocabulario",
      "descricao": "Letras P até T",
      "itens": [
        {
          "ingles": "P",
          "portugues": "Letra P - som como 'pii'",
          "fonetica": "/piː/",
          "tem_audio": true,
          "contexto": "Sounds like 'pee'"
        },
        {
          "ingles": "Q",
          "portugues": "Letra Q - som como 'kiiú'",
          "fonetica": "/kjuː/",
