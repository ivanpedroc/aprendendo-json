          "fonetica": "/ɛs/",
          "tem_audio": true,
          "contexto": "Simple 'es' sound"
        },
        {
          "ingles": "T",
          "portugues": "Letra T - som como 'tii'",
          "fonetica": "/tiː/",
          "tem_audio": true,
          "contexto": "Sounds like 'tea' (the drink)"
        }
      ]
    },
    {
      "id": "letras_u_z",
      "titulo": "Letters U through Z",
      "tipo": "vocabulario",
      "descricao": "Últimas letras do alfabeto",
      "itens": [
        {
          "ingles": "U",
          "portugues": "Letra U - som como 'iiú'",
          "fonetica": "/juː/",
          "tem_audio": true,
          "contexto": "Sounds like 'you'"
        },
        {
          "ingles": "V",
          "portugues": "Letra V - som como 'vii'",
          "fonetica": "/viː/",
          "tem_audio": true,
          "contexto": "Simple 'vee' sound"
        },
        {
