    {
      "pergunta": "Complete a frase: 'She ___ a student.'",
      "alternativas": [
        "am",
        "is",
        "are",
        "be"
      ],
      "resposta_correta": "is",
      "feedback": "Resposta correta! Para o pronome 'she' (ela), usamos 'is'."
    },
    {
      "pergunta": "Qual a forma correta para 'I'?",
      "alternativas": [
        "I is",
        "I are",
        "I am",
        "I be"
      ],
      "resposta_correta": "I am",
      "feedback": "Isso mesmo! A forma correta para o pronome 'I' (eu) é 'am'."
    },
    {
      "pergunta": "Como você diria 'Nós somos amigos'?",
      "alternativas": [
        "We is friends",
        "We am friends",
        "We are friends",
        "We be friends"
      ],
      "resposta_correta": "We are friends",
      "feedback": "Perfeito! 'Are' é usado para os pronomes 'we' (nós), 'you' (vocês) e 'they' (eles)."
